{
    "taskGroups": [
        {
            "taskSpec": {
                "runnables": [
                    {
                        "container": {
                            "imageUri": "us-central1-docker.pkg.dev/data-science-417721/kaggle-repository/batch-job-gpu:latest"
                        }
                    }
                ],
                "computeResource": {
                    "cpuMilli": "16000",
                    "memoryMib": "12000"
                },
                "maxRunDuration": "28800s"
            },
            "taskCount": 3,
            "parallelism": 3,
            "taskCountPerNode": 1
        }
    ],
    "allocationPolicy": {
        "location": {"allowedLocations": ["regions/us-central1"] }
    },
    "logsPolicy": {
        "destination": "CLOUD_LOGGING"
    }
}